// Development Prisma schema with SQLite
// This is a temporary solution for local development

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserDetails {
  id             String   @id @default(cuid())
  emailId        String   @unique
  clerkId        String   @unique
  firstName      String?
  lastName       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  freeExamCount  Int      @default(0)
  paidExamCount  Int      @default(0)

  // Relations
  examHistory    ExamHistory[]

  @@map("userDetails")
}

model ExamHistory {
  id                    String   @id @default(cuid())
  emailId               String
  testId                String
  certificateName       String
  certificateProvider   String
  certificateCode       String
  testDateTime          DateTime
  score                 Int
  percentage            Float
  resultSummary         String   // SQLite uses TEXT by default
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  user                  UserDetails @relation(fields: [emailId], references: [emailId], onDelete: Cascade)

  @@map("examHistory")
}